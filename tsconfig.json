{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,

    "outDir": "dist"
  },
  "include": [
    "**/*.ts"
  ]
}