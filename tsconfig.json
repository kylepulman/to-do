{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,

    "outDir": "dist"
  },
  "include": [
    "*.ts"
  ]
}