{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "dist"
  },
  "include": ["./src"]
}